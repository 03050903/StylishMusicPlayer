<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RadioGroup
        android:id="@+id/radio_group_segmented_control"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mp.padding.normal"
        android:layout_marginBottom="@dimen/mp.padding.large"
        >

        <RadioButton
            android:id="@+id/radio_button_all"
            style="@style/MP.Theme.Widget.SegmentedControl.Left"
            android:text="@string/mp.local_files.segmented.all"
            tools:checked="true"
            />

        <RadioButton
            android:id="@+id/radio_button_folder"
            style="@style/MP.Theme.Widget.SegmentedControl.Right"
            android:text="@string/mp.local_files.segmented.folder"
            />
    </RadioGroup>

    <View
        android:id="@+id/divider"
        style="@style/MP.Theme.Widget.Divider.Line.Vertical"
        android:layout_below="@+id/radio_group_segmented_control"
        />

    <android.support.v7.widget.RecyclerView
        xmlns:recyclerView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/divider"
        android:paddingTop="@dimen/mp.padding.large"
        android:paddingBottom="@dimen/mp.padding.large"
        android:clipToPadding="false"
        recyclerView:layoutManager="@string/mp.list.layoutManager.linear"
        tools:listitem="@layout/item_local_music"
        />

    <io.github.ryanhoo.music.ui.widget.RecyclerViewFastScroller
        android:id="@+id/fast_scroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/mp.padding.large"
        android:paddingBottom="@dimen/mp.padding.large"
        android:layout_below="@+id/divider"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="56dp"
            android:minHeight="56dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/mp.padding.large"
            android:layout_marginEnd="@dimen/mp.padding.large"
            android:padding="@dimen/mp.padding.normal"
            android:background="@drawable/fast_scroller_bubble"
            android:textColor="?attr/colorAccent"
            android:textSize="20sp"
            tools:text="A"
            />

        <ImageView
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/mp.padding.small"
            android:paddingStart="@dimen/mp.padding.small"
            android:src="@drawable/fast_scroller_indicator"
            tools:ignore="RtlSymmetry"/>
    </io.github.ryanhoo.music.ui.widget.RecyclerViewFastScroller>
</RelativeLayout>